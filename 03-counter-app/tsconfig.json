{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "esnext",

    "module": "esnext",

    "jsx": "react-native",

    "strict": true,

    "moduleResolution": "bundler",

    "allowJs": true,

    "esModuleInterop": true,

    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,
    "baseUrl": "."
  },

  "exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
